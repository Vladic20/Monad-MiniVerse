# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Database Configuration
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://crypto_bot:your_secure_password@localhost/crypto_bot

# Blockchain APIs Configuration

# Infura API Key для Ethereum
# Зарегистрируйтесь на https://infura.io/
INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# TronGrid API Key для Tron
# Зарегистрируйтесь на https://www.trongrid.io/
TRONGRID_API_KEY=your_tron_grid_api_key_here

# Solana RPC URL (можно оставить по умолчанию)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Environment (development, production)
ENVIRONMENT=development